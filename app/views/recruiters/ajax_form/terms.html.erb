<div class="modal-header">
  <!--button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button-->
  <h3 class='title'>Welcome <%= recruiter.name %></h3>
</div>
<div class="modal-body">
  <p>Please Read and Approve the following conditions before moving forward.</p>
  <embed class='terms_and_condition' src='/terms_and_conditions'></embed>
  <%= simple_form_for(:term_approval, :html=> {:class => 'form-horizontal approve_terms'}, :url => terms_path, :remote => true) do |f| %>
      <div class='control-group form-inline'>
        <div class='controls'>
          <label class='checkbox'> <input type="checkbox" value='1' name="recruiter[status]">I have read and agreed to the following terms and conditions</label>
          <input type="hidden" id="action" class='span4' name="recruiter[action]" value='send_form'>
          <input type="submit" class='btn btn-info pull-right' value="Continue">
          <div class="clear"></div>
        </div>
      </div>
      <div class="clear"></div>
  <% end %>
</div>