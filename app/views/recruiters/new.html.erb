<div class='alt_wrapper'>
<h1>New Recruiter</h1>

<%= simple_form_for(@recruiter) do |f| %>
	<%= f.input :name %>
	<%= f.input :email %>
	<%= f.input :password %>
	<%= f.input :password_confirmation %>
	<%= f.input :individual_description %>
	<%= f.input :company %>
	<%= f.input :company_description %>
	<%= f.submit :text=>"Create new recruiter", :class => 'btn btn-primary' %>
<% end %>

<%= link_to 'Back', recruiters_path %>
</div>