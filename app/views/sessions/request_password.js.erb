<% if flash[:result].nil? %>
    $("div#modal").html('<%= escape_javascript(render :template => "sessions/ajax_form/request_password.html.erb", :formats => [:html]) %>')
<% else %>
    $("form.request_password_renewal").siblings("p.alert").addClass('<%= escape_javascript(flash[:result]) %>').html('<%= escape_javascript(flash[:notice]) %>').show();
    $("form.request_password_renewal")[0].reset();
<% end %>